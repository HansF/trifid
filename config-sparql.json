{
  "baseConfig": "trifid:config-base.json",
  "patchHeaders": {
    "root": {
      "remove": [
        "Fuseki-Request-ID",
        "Server"
      ]
    }
  },
  "sparqlProxy": {
    "default": {
      "path": "/query",
      "options": {
        /*"authentication": {
          "user": "user",
          "password": "password"
        }*/
      }
    }
  },
  "handler": {
    "root": {
      "module": "trifid-handler-sparql",
      "options": {
        "resourceExistsQuery": "ASK { <${iri}> ?p ?o }",
        "resourceGraphQuery": "DESCRIBE <${iri}>",
        "containerExistsQuery": "ASK { ?s a ?o. FILTER REGEX(STR(?s), \"^${iri}\") }",
        "containerGraphQuery": "CONSTRUCT { ?s a ?o. } WHERE { ?s a ?o. FILTER REGEX(STR(?s), \"^${iri}\") }"
      }
    }
  },
  "yasgui": {
    "default": {
      "path": "/sparql"
    }
  },
  "breakDown": {
    "handler": {},
    "handler.root": {},
    "handler.root.options": {},
    "handler.root.options.endpointUrl": "sparqlEndpointUrl",
    "sparqlProxy": {},
    "sparqlProxy.root": {},
    "sparqlProxy.root.options": {},
    "sparqlProxy.root.options.endpointUrl": "sparqlEndpointUrl",
    "yasgui": {},
    "yasgui.root": {},
    "yasgui.root.options": {},
    "yasgui.root.options.endpointUrl": [
      "sparqlProxy.path",
      "sparqlEndpointUrl"
    ]
  }
}
