{
  "name": "trifid-core",
  "description": "Trifid Core",
  "type": "module",
  "version": "2.6.2",
  "license": "MIT",
  "homepage": "https://github.com/zazuko/trifid",
  "repository": {
    "type": "git",
    "url": "https://github.com/zazuko/trifid.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/zazuko/trifid/issues"
  },
  "scripts": {
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "watch": "nodemon server.js",
    "typings": "tsc",
    "clean": "rimraf *.tgz *.d.ts* lib/*.d.ts* lib/**/*.d.ts* middlewares/*.d.ts* middlewares/**/*.d.ts*",
    "prepack": "npm run clean && npm run typings",
    "postpublish": "npm run clean",
    "release": "changeset publish"
  },
  "main": "index.js",
  "types": "./index.d.ts",
  "bin": {
    "trifid-core": "./server.js"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "dependencies": {
    "absolute-url": "^1.2.2",
    "ajv": "^8.12.0",
    "camouflage-rewrite": "^1.5.1",
    "commander": "^11.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "handlebars": "^4.7.7",
    "json5": "^2.2.3",
    "lodash": "^4.17.21",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.0",
    "vhost": "^3.0.2",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@jest/globals": "^29.6.2",
    "babel-jest": "^29.6.2",
    "jest": "^29.6.2",
    "nodemon": "^2.0.22",
    "path-scurry": "^1.10.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "typescript": "5.1.6"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
