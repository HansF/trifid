{
  "logger": {
    "app": "trifid",
    "level": "debug"
  },
  "listener": {
    "port": 8080
  },
  "express": {
    "trust proxy": "loopback",
    "x-powered-by": null
  },
  "patchHeaders": {
    "static": {
      "Access-Control-Allow-Origin": "*",
      "Cache-Control": "public, max-age=120",
      "Vary": "Accept"
    }
  },
  "staticFiles": {
    "rendererFiles": {
      "path": "/",
      "folder": "renderer:public"
    }
  },
  "rewrite": {
    "mediaTypes": [
      "application/html",
      "application/ld+json",
      "application/rdf+xml",
      "application/xhtml+xml",
      "text/html",
      "text/turtle"
    ],
    "rewriteContent": true
  },
  "handler": {
    "module": "trifid-handler-fs",
    "options": {
      "path": "node_modules/tbbt-ld"
    }
  },
  "renderer": {
    "module": "trifid-renderer-simple",
    "template": "renderer:templates/index.html",
    "templateError": "renderer:templates/error.html"
  }
}
